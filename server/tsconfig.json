{
  "compilerOptions": {
    /* File Layout */
    // "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "nodenext",
    "target": "es2020",
    "lib": ["esnext"],
    "types": ["node"],

    /* React Support */
    "jsx": "react-jsx",

    /* Strict Typechecking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,

    /* Module and Interop */
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    /* Output & Source Maps */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/data/**/*.json", "prisma/**/*", "prisma/seed.ts", "prisma.config.ts"]
}



